@page "/counter"
@using Poll.Services

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount (c)</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 10;

    private async Task IncrementCount()
    {
     
        currentCount++;
    }
}
